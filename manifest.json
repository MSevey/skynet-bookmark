{
    "manifest_version": 2,
    "name": "Skynet Bookmark",
    "version": "1.0",
    "description": "Convert article in current tab to readable form and upload it to SkyNet.",
    "icons": {
        "48": "icon.png"
    },
    "permissions": [
        "activeTab",
        "*://*/*",
        "bookmarks",
        "tabs",
        "storage",
        "downloads"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "skynet-bookmark"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}
